<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml" />

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp />
                <logLevel />
                <loggerName />
                <message />
                <mdc />
                <stackTrace />
                <pattern>
                    <pattern>
                        {
                        "service": "api-tree-service",
                        "environment": "${ENVIRONMENT:-development}",
                        "version": "${APP_VERSION:-unknown}"
                        }
                    </pattern>
                </pattern>
            </providers>
        </encoder>
    </appender>

    <!-- File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE_PATH:-./logs/application.log}</file>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp />
                <logLevel />
                <loggerName />
                <message />
                <mdc />
                <stackTrace />
                <pattern>
                    <pattern>
                        {
                        "service": "api-tree-service",
                        "environment": "${ENVIRONMENT:-development}",
                        "version": "${APP_VERSION:-unknown}"
                        }
                    </pattern>
                </pattern>
            </providers>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE_PATH:-./logs/application.log}.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
            <maxFileSize>${LOG_FILE_MAX_SIZE:-100MB}</maxFileSize>
            <maxHistory>${LOG_FILE_MAX_HISTORY:-30}</maxHistory>
            <totalSizeCap>${LOG_FILE_TOTAL_SIZE:-1GB}</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Error File Appender -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE_PATH:-./logs/error.log}</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp />
                <logLevel />
                <loggerName />
                <message />
                <mdc />
                <stackTrace />
                <pattern>
                    <pattern>
                        {
                        "service": "api-tree-service",
                        "environment": "${ENVIRONMENT:-development}",
                        "version": "${APP_VERSION:-unknown}",
                        "type": "error"
                        }
                    </pattern>
                </pattern>
            </providers>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>
                ${LOG_FILE_PATH:-./logs/error.log}.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
            <maxFileSize>${LOG_FILE_MAX_SIZE:-100MB}</maxFileSize>
            <maxHistory>${LOG_FILE_MAX_HISTORY:-30}</maxHistory>
            <totalSizeCap>${LOG_FILE_TOTAL_SIZE:-1GB}</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Security Log Appender -->
    <appender name="SECURITY_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE_PATH:-./logs/security.log}</file>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp />
                <logLevel />
                <loggerName />
                <message />
                <mdc />
                <stackTrace />
                <pattern>
                    <pattern>
                        {
                        "service": "api-tree-service",
                        "environment": "${ENVIRONMENT:-development}",
                        "version": "${APP_VERSION:-unknown}",
                        "type": "security"
                        }
                    </pattern>
                </pattern>
            </providers>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>
                ${LOG_FILE_PATH:-./logs/security.log}.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
            <maxFileSize>${LOG_FILE_MAX_SIZE:-100MB}</maxFileSize>
            <maxHistory>${LOG_FILE_MAX_HISTORY:-30}</maxHistory>
            <totalSizeCap>${LOG_FILE_TOTAL_SIZE:-1GB}</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Logger Configurations -->
    <logger name="com.api.family.apitreeservice" level="${APP_LOG_LEVEL:-INFO}" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
        <appender-ref ref="ERROR_FILE" />
    </logger>

    <logger name="org.springframework.security" level="${SECURITY_LOG_LEVEL:-WARN}"
        additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="SECURITY_FILE" />
        <appender-ref ref="ERROR_FILE" />
    </logger>

    <logger name="org.hibernate.SQL" level="${HIBERNATE_SQL_LOG:-WARN}" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </logger>

    <logger name="org.springframework.web" level="${WEB_LOG_LEVEL:-INFO}" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </logger>

    <!-- Root Logger -->
    <root level="${LOG_LEVEL:-INFO}">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
        <appender-ref ref="ERROR_FILE" />
    </root>

    <!-- Profile-specific configurations -->
    <springProfile name="!prod">
        <logger name="com.api.family.apitreeservice" level="DEBUG" />
        <logger name="org.springframework.web" level="DEBUG" />
    </springProfile>

    <springProfile name="prod">
        <logger name="com.api.family.apitreeservice" level="INFO" />
        <logger name="org.springframework.web" level="WARN" />
        <logger name="org.springframework.security" level="WARN" />
    </springProfile>
</configuration>